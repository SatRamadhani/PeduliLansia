<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/elderrelativepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ElderRelativePageFragment">

    <!-- Guide Line -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="15dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="15dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinebottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="30dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinetop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <!-- End of Guide Line -->

    <LinearLayout
        android:id="@+id/elder_menu_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintBottom_toTopOf="@+id/guidelinetop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/elder_menu_logo"
            android:layout_width="10dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:contentDescription="@string/logo"
            android:scaleType="fitStart"
            android:src="@drawable/pedulilansia" />

        <TextView
            android:id="@+id/elder_menu_subMenu"
            android:layout_width="92dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:text=" | Kerabat"
            android:textColor="@color/primary_green"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/elder_menu_menuIcon"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_weight="0.0001"
            android:background="@drawable/menu_bg"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/menu_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/elder_relativePage_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineend"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/guidelinestart"
        app:layout_constraintTop_toBottomOf="@+id/elder_menu_bar_layout"
        app:layout_constraintVertical_bias="0.05">

        <TextView
            android:id="@+id/elder_relativePage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Kerabat"
            android:textColor="@color/black_secondary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/elder_relativePage_title_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text=" Anda:"
            android:textColor="@color/black_secondary"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/elder_relativePage_listRelative_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="14dp"
        app:layout_constraintBottom_toTopOf="@+id/relative_reminder_button_layout"
        app:layout_constraintEnd_toStartOf="@+id/guidelineend"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/guidelinestart"
        app:layout_constraintTop_toBottomOf="@+id/elder_relativePage_title_layout"
        app:layout_constraintVertical_bias="0">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/elder_relativePage_listRelative"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ImageView
        android:id="@+id/elder_relativePage_qrcode"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:background="@drawable/qr_bg"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/relative_reminder_button_layout"
        app:layout_constraintEnd_toStartOf="@+id/guidelineend"
        app:layout_constraintStart_toStartOf="@+id/guidelinestart"
        app:layout_constraintTop_toBottomOf="@+id/elder_relativePage_listRelative_layout" />

    <LinearLayout
        android:id="@+id/relative_reminder_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        app:layout_constraintBottom_toTopOf="@+id/guidelinebottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/elder_relativePage_title_layout"
        app:layout_constraintVertical_bias="1">

        <TextView
            android:id="@+id/elder_relativePage_button_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/primary_green"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:text="Tambah Kerabat"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/guidelinebottom" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>