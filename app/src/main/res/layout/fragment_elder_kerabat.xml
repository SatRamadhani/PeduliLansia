<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/elder_menu_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/back_icon_green" />

        <ImageView
            android:id="@+id/elder_menu_logo"
            android:layout_width="100dp"
            android:layout_height="29dp"
            android:layout_weight="1"
            android:contentDescription="@string/logo"
            android:scaleType="fitStart"
            android:src="@drawable/pedulilansia" />

        <TextView
            android:id="@+id/kerabat_header"
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:text=" | Kerabat    "
            android:textColor="@color/primary_green"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="828dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/elder_menu_bar_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/elder_kerabat"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Kerabat"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/anda"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:text=" Anda :"
                android:textColor="@color/black"
                android:textSize="23sp" />/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/kerabat1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/rounded"
                    app:srcCompat="@drawable/user_icon_focused" />

                <TextView
                    android:id="@+id/kerabat_satu"
                    android:layout_width="244dp"
                    android:layout_height="30dp"
                    android:text=" Satria Pinandita Abyatarsyah"
                    android:textAlignment="textStart"
                    android:textColor="@color/primary_green"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/identitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:fontFamily="@font/poppins"
                android:text="Anak"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/kerabat2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/rounded"
                    app:srcCompat="@drawable/user_icon_focused" />

                <TextView
                    android:id="@+id/kerabat_dua"
                    android:layout_width="258dp"
                    android:layout_height="30dp"
                    android:text=" Muhammad Satria Ramadhani"
                    android:textAlignment="textStart"
                    android:textColor="@color/primary_green"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/identitas3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:fontFamily="@font/poppins"
                android:text="Anak"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/kerabat3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/rounded"
                    app:srcCompat="@drawable/user_icon_focused" />

                <TextView
                    android:id="@+id/kerabat_tiga"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text=" Andum Pangestu"
                    android:textAlignment="textStart"
                    android:textColor="@color/primary_green"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/identitas4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:fontFamily="@font/poppins"
                android:text="Anak"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/kerabat4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/rounded"
                    app:srcCompat="@drawable/user_icon_focused" />

                <TextView
                    android:id="@+id/kerabat_empat"
                    android:layout_width="258dp"
                    android:layout_height="30dp"
                    android:text=" Muhamad Fikri Nur Bakhtiar"
                    android:textAlignment="textStart"
                    android:textColor="@color/primary_green"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/identitas2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:fontFamily="@font/poppins"
                android:text="Adik"
                android:textColor="@color/black" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>