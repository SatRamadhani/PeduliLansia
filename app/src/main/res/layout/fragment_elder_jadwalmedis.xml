<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="390dp"
        android:layout_height="53dp">

        <TextView
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Jadwal Medis"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="16dp" />

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton50"
            android:rotation="180"
            app:srcCompat="@drawable/ic_baseline_arrow_circle_right"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/keterangan"
        android:layout_width="395dp"
        android:layout_height="114dp"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="54dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Keterangan"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/button_obat"
            tools:layout_editor_absoluteX="16dp" />

        <Button
            android:id="@+id/buttonlainlain"
            android:layout_width="82dp"
            android:layout_height="25dp"
            android:background="@drawable/roundedbutton25"
            android:backgroundTint="@color/red"
            android:backgroundTintMode="add"
            android:fontFamily="@font/poppins"
            android:hapticFeedbackEnabled="false"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:text="Lain-Lain"
            android:textFontWeight="@integer/material_motion_duration_long_1"
            android:textSize="8sp"
            app:iconPadding="0dp"
            tools:layout_editor_absoluteX="258dp"
            tools:layout_editor_absoluteY="49dp" />

        <Button
            android:id="@+id/buttonCheckup"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@drawable/roundedbutton25"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/poppins"
            android:hapticFeedbackEnabled="false"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:text="Check Up"
            android:textFontWeight="@integer/material_motion_duration_long_1"
            android:textSize="8sp"
            app:iconPadding="0dp"
            tools:layout_editor_absoluteX="143dp"
            tools:layout_editor_absoluteY="49dp" />

        <Button
            android:id="@+id/button_obat"
            android:layout_width="57dp"
            android:layout_height="24dp"
            android:background="@drawable/roundedbutton50"
            android:backgroundTint="@color/red"
            android:backgroundTintMode="add"
            android:fontFamily="@font/poppins"
            android:hapticFeedbackEnabled="false"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:text="Obat"
            android:textFontWeight="@integer/material_motion_duration_long_1"
            android:textSize="8sp"
            app:iconPadding="0dp"
            tools:layout_editor_absoluteX="59dp"
            tools:layout_editor_absoluteY="49dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_left"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="192dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_right"
        tools:layout_editor_absoluteX="325dp"
        tools:layout_editor_absoluteY="192dp" />

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="642dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="247dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="300dp"
            android:layout_height="100dp"

            android:layout_gravity="center"
            android:background="@drawable/inr_with_border"
            android:padding="2dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/inr_with_border"
            android:text="TextView" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/inr_with_border"
            android:text="TextView" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/inr_with_border"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:text="Yang paling berharga itu adalah kesehatan dan waktu "
            android:textColor="@color/primary_green" />
    </LinearLayout>

    />

</androidx.constraintlayout.widget.ConstraintLayout>